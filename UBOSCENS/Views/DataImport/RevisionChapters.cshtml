                        {
                            if (subchapter.Title != "(Untitled)")
                            {
                                <li><a href="@subchapter.Title">@subchapter.Title</a></li>
                            }
                        }
                    </ul>
                </ul>
            }*@

    }
</div>
@section scripts{
    <script>
        $(document).ready(function (e) {
            $("a").on("click", function (e) {
                e.preventDefault();
                if ($(this).attr("href").charAt(0) != "/") {
                    window.location = "/DataImport/getContent/?chaptername=" + $(this).attr("href")
                } else {
                    window.location = $(this).attr("href");
                }

            })
            $("#search").keypress(function(e) {
                if (e.which === 13) {
                    Window.href = "/DataImport/SearchResults?search=" + $(this).val();;
                }
                else {
                    console.log(e.which);
                }
            })
        });


    </script>
}
