@{
    ViewBag.Title = "Census Report";
    //Layout = "~/Views/Shared/NoLayout.cshtml";
    Layout = "~/Views/Shared/_Default.cshtml";
    
}
@section styles{
    <style>
        .box {
            background: ghostWhite;
            transition: all 0.2s ease;
            margin-top: 10px;
            box-sizing: border-box;
            border-radius: 5px;
            background-clip: padding-box;
            padding: 0 20px 20px 20px;
            min-height: 340px;
        }

            .box:hover {
                border: 2px solid #525C7A;
            }

            .box span.box-title {
                color: #fff;
                font-size: 24px;
                font-weight: 300;
                text-transform: uppercase;
            }

            .box .box-content {
                padding: 16px;
                border-radius: 0 0 2px 2px;
                background-clip: padding-box;
                box-sizing: border-box;
            }

                .box .box-content p {
                    color: #515c66;
                    text-transform: none;
                }

        .calendar {
            margin: .25em 10px 10px 0;
            padding-top: 5px;
            float: left;
            width: 80px;
            background: #ededef;
            background: -webkit-gradient(linear,left top,left bottom,from(#ededef),to(#ccc));
            background: -moz-linear-gradient(top,#ededef,#ccc);
            font: bold 30px/60px Arial Black,Arial,Helvetica,sans-serif;
            text-align: center;
            color: #000;
            text-shadow: #fff 0 1px 0;
            -moz-border-radius: 3px;
            -webkit-border-radius: 3px;
            border-radius: 3px;
            position: relative;
            -moz-box-shadow: 0 2px 2px #888;
            -webkit-box-shadow: 0 2px 2px #888;
            box-shadow: 0 2px 2px #888;
        }

            .calendar em {
                display: block;
                font: normal bold 11px/30px Arial,Helvetica,sans-serif;
                color: #fff;
                text-shadow: #00365a 0 -1px 0;
                background: #04599a;
                background: -webkit-gradient(linear,left top,left bottom,from(#04599a),to(#00365a));
                background: -moz-linear-gradient(top,#04599a,#00365a);
                -moz-border-radius-bottomright: 3px;
                -webkit-border-bottom-right-radius: 3px;
                border-bottom-right-radius: 3px;
                -moz-border-radius-bottomleft: 3px;
                -webkit-border-bottom-left-radius: 3px;
                border-bottom-left-radius: 3px;
                border-top: 1px solid #00365a;
            }

            .calendar:before, .calendar:after {
                content: '';
                float: left;
                position: absolute;
                top: 5px;
                width: 8px;
                height: 8px;
                background: #111;
                z-index: 1;
                -moz-border-radius: 10px;
                -webkit-border-radius: 10px;
                border-radius: 10px;
                -moz-box-shadow: 0 1px 1px #fff;
                -webkit-box-shadow: 0 1px 1px #fff;
                box-shadow: 0 1px 1px #fff;
            }

            .calendar:before {
                left: 11px;
            }

            .calendar:after {
                right: 11px;
            }

            .calendar em:before, .calendar em:after {
                content: '';
                float: left;
                position: absolute;
                top: -5px;
                width: 4px;
                height: 14px;
                background: #dadada;
                background: -webkit-gradient(linear,left top,left bottom,from(#f1f1f1),to(#aaa));
                background: -moz-linear-gradient(top,#f1f1f1,#aaa);
                z-index: 2;
                -moz-border-radius: 2px;
                -webkit-border-radius: 2px;
                border-radius: 2px;
            }

            .calendar em:before {
                left: 13px;
            }

            .calendar em:after {
                right: 13px;
            }
    </style>

}
<div class="row">
    <div class="row ">
        <h4 style="margin-left:31%;color: rgb(0, 102, 153);font-family: Lovelo, 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: 700;">
            National Population and Housing Census 2014
        </h4>
        <div class="col-md-1">
            <br>
            <p class="calendar">
                24<em>March</em>
            </p>
        </div>
        <div class="col-md-11">
            <br />
            <p style="text-align: center;">
                View or Download the latest 2014 National Housing and Population report for the 24 March Release. Use the search feature in the view option to find exactly the information you need
            </p>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6 text-center">
            <div class="box">
                <div class="box-content">
                    <h1 class="tag-title">View Report</h1>
                    <hr />
                    <p>View the Census Report on Mobile, On the Go. Learn more about the 2014 National population and housing Census. </p>
                    <br />
                    <a href="/DataImport/RevisionChapters"><img><img style=" width: 66%;" src="~/Content/Images/b_mob.png" /></a>
                </div>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <div class="box">
                <div class="box-content">
                    <h1 class="tag-title">Download</h1>
                    <hr />
                    <p>View The full Report through Your web-browser. Navigate through the Census Report PDF or download it for later.</p>
                    <br />
                    <a href="~/Downloads/Report.docx"><img style=" width: 66%;" src="~/Content/Images/b_web.png" /></a>
                </div>
            </div>
        </div>
    </div>
</div>

